<!--Environments -->
<!--Common -->
    <PathVariable Id="CommonDir" Value="%commonEnvFolder%\"/>
<!--Germany-->
    <PathVariable Id="GermanDir" Value="%ENVDIR%\germany\"/>

 </TargetPathVariables>
  
 <Component Id="TheExtensionComponent" Guid="771484ad-3531-49c2-835f-4f6b7d788180">
  <!--Todo: Update correct files' name and paths in the extension's installer/TSEP folder -->
