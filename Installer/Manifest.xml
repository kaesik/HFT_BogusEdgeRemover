  <!--Environments-->
  <!--File Id="CommonFiles" Source="%InstallerFolder%\Environments\common\*.*" Target="%CommonDir%" Recursive = "yes" /-->
  <!--<File Id="GermanFiles" Source="%InstallerFolder%\Environments\germany\*.*" Target="%GermanDir%" Recursive = "yes" /-->
